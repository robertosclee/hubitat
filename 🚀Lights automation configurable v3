            sidelights.each { light ->
                lightsstate += "${light}: ${light.currentValue("switch")}, ${light.latestState("switch")?.date.format('yyyy-MM-dd, EEEE, HH:mm:ss')} -> ${light.latestState("switch")?.value}\n"
            }  
        }      
        paragraph "${lightsstate}"
        
        paragraph "<br/>All states: <i>${states}</i>"
        
        
        //
    }      
    section("Settings")
    {
        input "aboutRoom", "enum", title: "Select room", options: ["h", "lr", "mb", "g", "k", "s", "w"], required: true
