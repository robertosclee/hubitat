definition(
    name: "Lights Automations V1",
    namespace: "RSCL_LA",
    author: "Roberto Lee",
    description: "A parent app that creates and manages child apps.",
    category: "Convenience",
    iconUrl: "",
    iconX2Url: "",
    singleInstance: true
)

preferences {
    page(name: "mainPageParent", title: "RSCL Parent App Configuration", install: true, uninstall: true) {
        section("Create a new child app:") {
            app(name: "myChildApps", appName: "Lights Automations V1 Child", namespace: "RSCL_LA", title: "Add a New Child App", multiple: true)
        }
    }
}


def installed() {
    log.debug "Parent App Installed"
    initialize()
}

def updated() {
    log.debug "Parent App Updated"
    initialize()
}

def initialize() {
    log.debug "Parent App Initialized"
}